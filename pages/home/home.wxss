/* pages/home/home.wxss */
@import "/templates/index.wxss";

.container .search {
  position: relative;
  display: flex;
  padding: 2px 5px;
  align-items: center;
  width: 100%;
  height: 24px;
  border-radius: 12px;
  background-color: #ececec;
  margin-bottom: 20rpx;
}

.container .icon-sousuo {
  margin-left: 3px;
}

.container .search-input {
  margin-left: 10px;
  width: 100%;
}

.container .top-tab-swiper {
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.2);
  display: flex;
  zoom: 1;
  margin-bottom: 20rpx;
}

.container .top-tab-swiper .tab {
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
}

.container .top-tab-swiper .tab-border {
  border-bottom: 1px solid #f00;
  color: #f00;
}

.container .swiper {
  width: 100%;
}

.container .swiper .commend {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}