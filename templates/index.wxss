/*showbox-container*/
@import "../assets/style/myCss.wxss";

.showbox-container {
  width: 330rpx;
  height: 250rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.showbox-container image {
  width: 330rpx;
  height: 160rpx;
  border-radius: 3px;
}

.showbox-container text {
  width: 320rpx;
  font-size: 0.8rem;
  line-height: 1rem;
  
  word-wrap: break-word;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*longshowbox-container*/

.longshowbox-container navigator{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.longshowbox-container image {
  width: 40%;
  height: 150rpx;
  border-radius: 5px;
}
.longshowbox-container .videoInfo{
  display: flex;
  justify-content: space-between;
  width: 60%;
  padding-left: 16rpx;
  flex-direction: column;
}
.longshowbox-container .videoInfo .title{
  word-wrap: break-word;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}